{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "./js-compiled",
    "rootDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "js/**/*"
  ],
  "exclude": [
    "node_modules",
    "debug",
    "js-compiled"
  ]
}
