{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "js/**",
      "*.md",
      "tsconfig.json",
      "package.json",
      "package-lock.json"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/html/index.html"
      },
      {
        "source": "/signin",
        "destination": "/html/signin.html"
      },
      {
        "source": "/register",
        "destination": "/html/register.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
